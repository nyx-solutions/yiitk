{
  "name": "yiitk/yiitk",
  "description": "YiiTK - Yii Framework version 2 Toolkit",
  "type": "yii2-extension",
  "keywords": ["yii2", "extension", "framework", "php"],
  "license": "BSD-3-Clause",
  "version": "5.0.0",
  "authors": [
    {
      "name": "YiiTK",
      "email": "yiitk@jsas.com.br"
    },
    {
      "name": "Jonatas Sas",
      "email": "atendimento@jsas.com.br"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1.0 <8.2",

    "ext-json": "*",
    "ext-curl": "*",
    "ext-soap": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",

    "yiisoft/yii2": "~2.0.48",

    "yiisoft/yii2-httpclient": "~2.0.15",
    "yiisoft/yii2-queue": "~2.3.5",
    "yiisoft/yii2-swiftmailer": "~2.1.3",
    "yiisoft/yii2-bootstrap": "~2.0.11",
    "yiisoft/yii2-bootstrap4": "~2.0.11",

    "kartik-v/yii2-password": "~v1.5.7",

    "yii2tech/ar-linkmany": "~1.0.3",

    "php-curl-class/php-curl-class": "~9.17.4",

    "justinvoelker/yii2-separatedpager": "~1.0.2",

    "nesbot/carbon": "~2.68.1",

    "hashids/hashids": "~4.1.0"
  },
  "require-dev": {
    "yiisoft/yii2-gii": "~2.2.6",
    "yiisoft/yii2-faker": "~2.0.0",

    "codeception/codeception": "~4.1.12",
    "codeception/module-asserts": "~1.3.1",
    "codeception/module-yii2": "~1.1.1",
    "codeception/module-filesystem": "~1.0.3",
    "codeception/verify": "~0.5.0 || ~1.1.0"
  },
  "autoload": {
    "psr-4": {
      "yiitk\\": "src/toolkit"
    }
  },
  "config": {
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/yiitk/yiitk"
    }
  ]
}
